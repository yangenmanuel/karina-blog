---
import Layout from '../layouts/Layout.astro'
import BlogPost from '../components/BlogPost.astro'
import Navigation from '../components/Navigation.astro'

const allPosts = await Astro.glob('../pages/posts/*.md')
---
<!-- #FEEBD9 -->
<Layout title='Blog!' bg='bg-gradient-to-r from-[#FEEBD9] to-[#FFDBB8] to-90%'>
  <Navigation navColor="text-black/80" blockBgColor="bg-black/5" />

  <main class="md:w-3/4 mx-auto">
    <h1 class='text-2xl'>Latest blog posts ðŸ”¥</h1>
    {
      allPosts.map((post) => {
        const { title, description } = post.frontmatter

        return (
          <BlogPost url={post.url} description={description} title={title} />
        )
      })
    }
  </main>
</Layout>
